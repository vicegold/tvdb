{
    "amd": true,
    "src":  "./src",
    "dest": "./build/assets",
    "directories": {
        "fonts": "fonts",
        "images": "images",
        "scripts": "js",
        "styles": "css",
        "svgsprites": "svgsprites"
    },
    "files": {
        "fonts": ["**/*.{woff2,woff,svg,eot,ttf,otf}"],
        "images": ["**/*.{png,jpg,jpeg,gif,svg}"],
        "scripts": ["**/*.js"],
        "styles": ["**/*.{sass,css}"],
        "svgsprites": ["**/*.{svg,svgz}"]
    },
    "browserSync": {
        "proxy": "tvdb.dev",
        "watchForChange": "./build/**/*.{html,php}",
        "notify": false
    },
    "autoprefixer": {
        "browsers": ["last 1 versions", "last 2 safari versions", "last 2 ie versions", "android >= 4.4", "last 2 iOS versions"]
    }
}
